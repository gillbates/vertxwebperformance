<?xml version="1.0" encoding="UTF-8"?>

<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>[%d{HH:mm:ss.SSS}][%thread][%-5level][%logger{20}][%line] - [%msg]%n</pattern>
        </encoder>
    </appender>

    <logger name="org.springframework" level="warn" additivity="false">
        <appender-ref ref="STDOUT"/>
    </logger>

    <logger name="org.mongodb.driver" level="OFF">
        <appender-ref ref="STDOUT"/>
    </logger>


    <logger name="io.netty" level="warn">
        <appender-ref ref="STDOUT"/>
    </logger>

    <logger name="javax" level="warn">
        <appender-ref ref="STDOUT"/>
    </logger>

    <logger name="io.vertx" level="warn">
        <appender-ref ref="STDOUT"/>
    </logger>

    <logger name="org.apache.http" level="OFF">
        <appender-ref ref="STDOUT"/>
    </logger>

    <logger name="org.spark_project" level="OFF">
        <appender-ref ref="STDOUT"/>
    </logger>

    <logger name="org.apache.kafka" level="OFF">
        <appender-ref ref="STDOUT"/>
    </logger>

    <logger name="software.amazon.awssdk" level="OFF">
        <appender-ref ref="STDOUT"/>
    </logger>


    <root level="${LOG_SEVERITY}">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>
